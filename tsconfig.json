{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ES6"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "files": ["globals.d.ts"],
  "exclude": [
    ".next",
    ".vscode",
    ".yarn",
    ".output",
    "build",
    "docs",
    "jest-cache",
    "node_modules",
    "out",
    "deployment",
    "**/*.md"
  ],
  "include": [
    "src/**/*"
  ]
}